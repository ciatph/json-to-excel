{
  "compilerOptions": {
    "target": "ES2022",
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
